---
layout: storyview
pagination:
  data: _stories
  size: 1
  alias: story
permalink: "/stories/{{ story.url }}/"
---

<div class="flex flex-col align-items-center gap-y-2 
            h-full font-display
            px-4">
  <div class="px-1 text-base border text-left">
    {{ story.title }}
  </div>

  <div class="text-sm border text-left 
              flex-1
              flex flex-col">
    <div class="flex-1 px-1">{{ story.description }}</div>

    
    <div class="mt-auto self-end w-10 h-10">
      {{ "/src/assets/img/icons/Comment Icon - Black.svg" | svgContents | safe }}
    </div>
    
  </div>

</div>
