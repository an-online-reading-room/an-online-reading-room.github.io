<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      {% block title %}The Reading Room{% endblock %}
    </title>
    <meta charset="UTF-8"/>
    {% if description %}
      <meta name="description" content="{{description}}"/>
    {% endif %}
    <meta http-equiv="x-ua-compatible" content="ie=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover"/>
    <link rel="stylesheet" href="{{ '/style.css' | url }}"/>
    <link rel="stylesheet" href="{{ '/extra.css' | url }}"/>
    {% block head %}{% endblock %}
    <script defer src="/assets/js/lunr.js?v={% version %}"></script>
    <script defer src="/assets/js/alpine.js?v={% version %}"></script>
    
    {# annotator.js #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script defer src="/assets/js/annotator-full.min.js?v={% version %}"></script>
    <link rel="stylesheet" href="{{ '/annotator.min.css' | url }}"/>
    
    <script defer src="/assets/js/annotator.touch.min.js?v={% version %}"></script>
    <link rel="stylesheet" href="{{ '/annotator.touch.css' | url }}"/>

    <script defer src="/assets/js/tinymce.min.js?v={% version %}"></script>
    <script defer src="/assets/js/richText-annotator.js?v={% version %}"></script>
    <link rel="stylesheet" href="{{ '/richText-annotator.css' | url }}"/>
    <link rel="stylesheet" href="{{ '/content.min.css' | url }}"/>
    <link rel="stylesheet" href="{{ '/skin.min.css' | url }}"/>
    

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courier+Prime&family=Karla:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-display overflow-y-hidden bg-primary">
    {% block content %}
      {{ content | safe }}
    {% endblock %}
    <script defer type="module" src="/assets/js/search.mjs?v={% version %}"></script>
  </body>
</html>